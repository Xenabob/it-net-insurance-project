@model InsuranceCompany.Models.Products

@{
    ViewData["Title"] = "Delete";
}

<h2>
    Delete Confirmation
</h2>

<div>
    <p>
        Please confirm you want to delete this product:
        <i>
            @Html.DisplayFor(model => model.Policy)
        </i>
    </p>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input class="btn btn-danger" name="confirmButton" type="submit" value="Delete" />
}