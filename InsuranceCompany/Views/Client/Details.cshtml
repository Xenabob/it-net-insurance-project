@model InsuranceCompany.ViewModels.ClientDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.FIRST_NAME)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.LAST_NAME)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Birth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Birth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Adress)
        </dd>
        <dt class="col-sm-2">
            Passport
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.PASSPORT)
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.PHONE)
        </dd>
        <dt class="col-sm-2">
            E-Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.EMAIL)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Client.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<hr />

<div>
    <h4>Orders</h4>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Product</th>
                <th>Client</th>
                <th>Validity Period</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {

                <tr>
                    <td>
                        @order.PRODUCT_ID
                    </td>

                    <td>
                        @order.CLIENT_ID
                    </td>

                    <td>
                        @order.VALIDITY_FROM – @order.VALIDITY_TO
                    </td>
                    <td>
                        <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.ID">Edit</a> |
                        <a asp-controller="Order" asp-action="Details" asp-route-id="@order.ID">Details</a> |
                        <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>